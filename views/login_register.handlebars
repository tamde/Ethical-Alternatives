
<div id="formContainer">
  <h1>Login</h1>
  
  {{#if messages.error}}
    <div class="error" id='hideMe'>
      <strong>Error: </strong>
      {{messages.error}}
    </div>
  {{/if}}
  
  <form action="/login" method="POST">
    <fieldset>
      <legend>Please enter your username and password</legend>
      <div>
        <label for="username"> Username </label> <br>
        <input
          type="text"
          id="log_username"
          name="log_username"
          title="Username"
          required>
      </div>
      <div>
        <label for="password"> Password </label> <br>
        <input
          type="password"
          id="log_password"
          name="log_password"
          title="Password"
          required>
      </div>
      <button type="submit">Login</button>
    </fieldset>
  </form>
  <h1>Register</h1>
  
  {{#if reg_error}}
    <div class="error" id='hideMe'>
      <strong>Error: </strong>
      {{reg_error}}
    </div>
  {{/if}}
  
  {{#if reg_success}}
    <div class="success" id='hideMe'>
      <strong>Success: </strong>
      {{reg_success}}
    </div>
  {{/if}}
  
  <form id="register_form" action="/register" method="POST">
    <fieldset>
      <legend>Please choose a username and password</legend>
      <div>
        <label for="username"> Username </label> <br>
        <input
          type="text"
          id="reg_username"
          name="reg_username"
          pattern="[a-zA-Z][a-zA-Z0-9_]{5,7}"
          title="Six to eight characters long"
          required>
      </div>
      <div>
        Username must be between 6 and 8 characters long: <br>
        <ul>
          <li>With Lowercase & Uppercase letters, numbers and underscores</li>
          <li>Must start with a letter</li>
        </ul>
      </div>
      <div>
        <label for="password"> Password </label> <br>
        <input
          type="password"
          id="reg_password"
          name="reg_password"
          pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,16}"
          title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
          required>
      </div>
      <div>
        Password must be between 8 and 16 characters with: <br>
        <ul>
          <li>1 Number</li>
          <li>1 Uppercase letter</li>
          <li>1 Lowercase letter</li>
        </ul>
      </div>
      <div>
        <label for="password"> Confirm password </label> <br>
        <input 
          type="password"
          id="confirm_password"
          name="confirm_password"
          onkeyup="validate('reg_password', 'confirm_password', 'Passwords do not match')"
          required>
      </div>
      <div>
        <label for="nickname"> Nickname (Optional, upto 16 characters) </label> <br>
        <input
          type="text"
          id="reg_nickname"
          name="reg_nickname"
          maxlength="16"
          title="Upto 16 characters">
      </div>
      <!-- <button type="submit">Register</button> -->
      <input id="submit_button" type="button" value="Register" onclick="confirm_register();"/>
    </fieldset>
  </form>
</div>
